<h2>Input</h2>
<h3>Input data using mouse or keyboard.</h3>
<div>
<h3>Basic usage</h3>
{{#el-card class="box-card" shadow="hover" as |card|}}
  {{#card.body}}
    {{#el-card class="box-card" shadow="naver" as |card|}}
      {{#card.body}}
        <ElInput @placeholder="Please input" @type="" @value={{value}} @customClass="input-width" />
        {{#if value.length}}
          <br><br>&nbsp;&nbsp;{{value}}
        {{/if}}
      {{/card.body}}
    {{/el-card}}
<pre><code class="language-handlebars">&lt;ElInput @placeholder="Please input" /></code></pre>
  {{/card.body}}
{{/el-card}}

<h3>Disabled</h3>
{{#el-card class="box-card" shadow="hover" as |card|}}
  {{#card.body}}
    {{#el-card class="box-card" shadow="naver" as |card|}}
      {{#card.body}}
        <ElInput @placeholder="Please input" @disabled="true" @customClass="input-width" />
      {{/card.body}}
    {{/el-card}}
<pre><code class="language-handlebars">&lt;ElInput @placeholder="Please input" @disabled="true" /></code></pre>
  {{/card.body}}
{{/el-card}}

<h3>Clearable</h3>
{{#el-card class="box-card" shadow="hover" as |card|}}
  {{#card.body}}
{{#el-card class="box-card" shadow="naver" as |card|}}
  {{#card.body}}
    <div class="input-width">
      <ElInput @placeholder="Please input" @clearable="true" />
    </div>
  {{/card.body}}
{{/el-card}}
<pre><code class="language-handlebars">&lt;ElInput @placeholder="Please input" @clearable="true" /></code></pre>
  {{/card.body}}
{{/el-card}}

<h3>Input with icon</h3>
{{#el-card class="box-card" shadow="hover" as |card|}}
{{#card.header title="You can simply use prefixIcon and suffixIcon attributes."}}{{/card.header}}
  {{#card.body}}
{{#el-card class="box-card" shadow="naver" as |card|}}
  {{#card.body}}
    <div class="input-width">
    <ElInput @placeholder="Please input" @prefixIcon="el-icon-search" />
    <br>
    <br>
    <ElInput @placeholder="Please input" @suffixIcon="el-icon-date" />
   </div>
  {{/card.body}}
{{/el-card}}
<pre><code class="language-handlebars">&lt;ElInput @placeholder="Please input" @prefixIcon="el-icon-search" />
&lt;ElInput @placeholder="Please input" @suffixIcon="el-icon-date" /></code></pre>
  {{/card.body}}
{{/el-card}}
</div>

