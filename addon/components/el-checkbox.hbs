<label class="el-checkbox
 {{if this.isChecked " is-checked "}}
  {{if this.isDisabled " is-disabled "}}
  {{if @indeterminate " is-indeterminate "}}
  {{if @focus " is-focus "}} {{this.checkboxSize}}
" role="checkbox" aria-checked={{this.isChecked}} >
  <span
          class="el-checkbox__input
            {{if this.isChecked " is-checked "}}
            {{if this.isDisabled " is-disabled "}}
            {{if @indeterminate " is-indeterminate "}}
            {{if @focus " is-focus "}}
"
          tabindex={{this.compTabIndex}}
          role={{this.compRole}}
          aria-checked={{this.compAriaChecked}}
  >
    <span class="el-checkbox__inner"></span>
    {{input
      type="checkbox"
      checked=value
      name=name
      disabled=isDisabled
      tabindex=tabindex
      autofocus=autofocus
      form=form
      class="el-checkbox__original"
      change=(action "handleChange")
    }}
  </span>
  <span class="el-checkbox__label">
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{label}}
    {{/if}}
  </span>
</label>